<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaIncio">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/logogreyzone"
        android:layout_weight="50"/>

    <EditText
        android:id="@+id/User"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user"
        android:layout_weight="9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/user"
        android:padding="10dp"
        android:background="@drawable/style1iconos"

        />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:layout_weight="9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/candado"
        android:padding="10dp"
        android:background="@drawable/style1iconos"/>

    <Button
        android:id="@+id/inicioSesion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/ingresar"
        android:layout_weight="10"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/blanco"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/Registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegÃ­strate"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/RecordarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/obtenerPassword"
        android:gravity="center"/>

</LinearLayout>